<div class='noticer'><p><%= @game.turn.capitalize %> Turn</p></div>

  <div class="center">
    
  </div>
  


    <!--   Flip board here -->
    <h2 class='game-name'><%= @game.name %></h2>
    <div class='user-info'>
      <% if current_user.id == @game.white_id %>
        <p><%= current_user.email %> - Color White</p>
      <% else %>
        <p><%= current_user.email %> - Color Black</p>
      <% end %>
    </div>
    
    <span></span>

    <div class="board-container">
      <table id="board" data-game_id="<%= @game.id %>">
          <% 8.times.each do |col| %>
          <tr id="row">
            <% 8.times.each do |row| %>
              <% piece = @game.pieces.where(position_x: row, position_y: col).first %>
              <td data-row="<%= row %>" data-col="<%= col %>">
                <% if piece.present? %>
                  <div class="piece_image" data-player="<%= piece.player %>" data-player="<%= piece.player %>" data-type='<%= piece.type %>' data-piece_id="<%= piece.id %>" data-piece_name="<%= piece.color %>_<%= piece.type %>" id="<%= piece.id %>" data-color="<%= piece.color %> "data-row="<%= row %>" data-col="<%= col %>">
                    <% image ="#{piece.color}_#{piece.type}.png" %>
                    <%= image_tag(image) %>
                  </div>
                <% end %>
              </td>
            <% end %>
          </tr>
          <% end %>
      </table>
    </div>

</div>

