<h2 class="available-games center">Available Games</h2>

  <div class="row col-10 offset-1">
     <div class="start-button">
	     <%= link_to 'Start Game', new_game_path, class: 'btn btn-primary button big' %>
      </div>
  </div>
  
<br>

<div class="row col-10 offset-1">
  
    <% @games.each do |game| %>
    <div class="games-list-item">
      <% if current_user.id == game.white_id %>
        <p><%= game.name %><%= link_to 'Enter', game_path(game) %></p>
      <% else %>
        <p><%= game.name %><%= link_to 'Join', game_join_path(game) %></p>
      <% end %>
      </div>
    <% end %>
  
</div>

