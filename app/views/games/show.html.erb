<div class= "booyah-box col-10 offset-1">
  <div class="center">
    <%= link_to 'Reload', repopulate_board_game_path, class: 'btn btn-primary' %>
  </div>
  
<!--<div id='tester' data-piece=<%= @pieces %>></div>-->

<!--   Flip board here -->

    <div class="board-container">
      <table id="board" data-game_id="<%= @game.id %>">
          <% 8.times.each do |col| %>
          <tr id="row">
            <% 8.times.each do |row| %>
              <% piece = @game.pieces.where(position_x: row, position_y: col).first %>
              <td data-row="<%= row %>" data-col="<%= col %>">
                <% if piece.present? %>
                  <div class="piece_image" data-piece_id="<%= piece.id %>" data-piece_name="<%= piece.color %>_<%= piece.type %>" id="<%= piece.id %>" data-color="<%= piece.color %> "data-row="<%= row %>" data-col="<%= col %>">
                    <% image ="#{piece.color}_#{piece.type}.png" %>
                    <%= image_tag(image) %>
                  </div>
                <% end %>
              </td>
            <% end %>
          </tr>
          <% end %>
      </table>
    </div>
  </div>
</div>

